<form id="frmSeleccionaRol">
    <div class="row">
        <div class="card">
            <div class="card-body">

                <div class="col-md-8 offset-md-2 col-sm-12">
                    <div class="card border-danger mb-3">
                        <div class="card-header">
                            Bienvenido @ViewBag.Nombre.

                        </div>
                        <div class="card-body">
                            @if (ViewBag.Cantidad == 1)
                            {
                                <label>Su rol es:</label>
                            }
                            else
                            {
                                <label>Seleccione Rol para ingresar a la web</label>
                            }
                            <br /><br />
                            <div class="form-group" id="frmRol">
                                <div class="input-group mb-3">
                                    @Html.DropDownList("idRol", (SelectList)ViewBag.Rol, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    <button id="btnSeleccionar" name="btnSeleccionar" class="btn btn-danger btn-block"><i class="fas fa-user"></i>&nbsp;Ingresar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="idUsuario" name="idUsuario" value="@ViewBag.IdUsuario" />
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
</form>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script type="text/javascript" src="~/Scripts/sweetalert2.all.min.js"></script>
<script src="~/Scripts/page/SeleccionarRol.js"></script>

