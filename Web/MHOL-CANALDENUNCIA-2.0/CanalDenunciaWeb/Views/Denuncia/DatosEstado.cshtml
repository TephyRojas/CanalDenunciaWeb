@model List<CanalDenunciaWeb.Models.Comentarios>
<form id="frmDenunciaEstado">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/denuncia/Cancelar">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Denuncia</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="~/denuncia/datosInvolucrados?idDenuncia=@ViewBag.IdDenuncia">Involucrados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/denuncia/datosArchivosAdjuntos?idDenuncia=@ViewBag.IdDenuncia">Documentos Adjuntos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/denuncia/datosDetalles?idDenuncia=@ViewBag.IdDenuncia">Detalle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="~/denuncia/datosEstado">Estado</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header text-white maru_card_info">
                    Estado
                </div>
                <div class="card-body">
                    <div class="form-group" id="frmTipoDelito">
                        <label for="Delito">Estado&nbsp;</label>
                        <div class="col-md-4 col-sm-12">
                            @Html.DropDownList("IdEstadoDenuncia", (SelectList)ViewBag.Estado, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="invalid-feedback" id="msjIdTipoDelito"></div>
                    </div>
                    <br />
                    <div class="row">
                        @if (Model.Count > 0)
                        {
                            <div class="card">
                                <div class="card-header">Historial Comentarios</div>

                                <div class="card-body maru_card_sinBorde">
                                    <table id="tblResultado" class="table table-bordered table-condensed table-hover tabla_condensada">
                                        <thead>
                                            <tr>
                                                <th>Fecha </th>
                                                <th>Usuario</th>
                                                <th>Comentario</th>
                                                @*<th style="width:100px; text-align:center;">Acción</th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Fecha</td>
                                                    <td>@item.Usuario</td>
                                                    <td>@item.Comentario</td>
                                                    @*<td style="text-align:center;">
                                                        <a id="btnVer" name="btnVer" class="btnGrilla" href="#" onclick="Ver(item.IdDenunciaComentario);" data-toggle="tooltip" data-placement="top" title="Ver"><i class="fas fa-lg fa-eye"></i></a>
                                                    </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                    <label for="Comentario">Comentario</label>
                    <textarea class="form-control" id="Comentario" name="Comentario" rows="5" maxlength="3000" placeholder="Ingrese sus comentarios">@ViewBag.Descripcion</textarea>
                    <input type="hidden" id="IdDenuncia" name="IdDenuncia" value="@ViewBag.IdDenuncia" />
                </div>
                <div class="card-footer">
                    <a href="~/denuncia/Cancelar" class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="bottom" title="Cancelar Ingreso"><i class="fas fa-ban"></i>&nbsp;Cancelar</a>
                    <div class="float-end">
                        <a id="btnCambiarEstado" name="btnCambiarEstado" href="#" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom" title="Cambiar Estado"><i class="fas fa-chevron-circle-right"></i>&nbsp;Cambiar Estado</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Assets/DataTables/datatables.js"></script>
<script src="~/Assets/Datetimepicker/js/moment.min.js"></script>
<script src="~/Assets/Datetimepicker/js/daterangepicker.js"></script>
<script src="~/Scripts/sweetalert2.all.min.js"></script>
<script src="~/Scripts/page/datosEstado.js"></script>
