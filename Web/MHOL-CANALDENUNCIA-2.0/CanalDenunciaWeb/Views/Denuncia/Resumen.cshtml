<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        Información de la Denuncia
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-3 col-sm-12">
                                <label>Identificador Denuncia</label>
                                <p><strong>@Model.Identificador</strong></p>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">
                                <label>Fecha Inicio Ocurrencia</label>
                                <p><strong>@Model.detalles.FechaInicio</strong></p>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">
                                <label>Fecha Fin Ocurrencia</label>
                                <p><strong>@Model.detalles.FechaFin</strong></p>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">
                                <label>Observación</label>
                                <p><strong>@Model.detalles.Comentario</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        Involucrados
                    </div>
                    <div class="card-body">
                        <table id="tblResultado" class="table table-bordered table-condensed table-hover tabla_condensada">
                            <thead>
                                <tr>
                                    <th style="width:200px; text-align:center;">Nombre</th>
                                    <th style="width:150px; text-align:center;">Sede</th>
                                    <th style="text-align:center;">Departamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.involucrados != null)
                                    {
                                        foreach (var item in Model.involucrados)
                                        {
                                            <tr>
                                                <td>@item.nombre</td>
                                                <td>@item.sede</td>
                                                <td>@item.departamento</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a href="~/denuncia/Cancelar" class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="bottom" title="Cancelar Ingreso"><i class="fas fa-ban"></i>&nbsp;Cancelar</a>
        <div class="float-end">
            <a id="btnImprimir" name="btnImprimir" href="#" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Imprimir"><i class="fas fa-print"></i>&nbsp;Imprimir</a>
        </div>        
    </div>
</div>

<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Assets/DataTables/datatables.js"></script>
<script src="~/Assets/Datetimepicker/js/moment.min.js"></script>
<script src="~/Assets/Datetimepicker/js/daterangepicker.js"></script>
<script>
     $("#btnImprimir").click(function () {
        window.open("@Url.Action("ResumenDenuncia","Denuncia")", "_blank",
            "menubar=no, toolbar=no, resizable=no, top=100, left=200, width=900, height=500");
    });
</script>